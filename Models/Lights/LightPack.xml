<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

	<!-- nav lights -->
	<!-- green and red navigation lights, usually mounted on the wingtips -->
	<!-- note: default orientation is up -->
	<model>
		<name>GreenLight</name>
		<path>Aircraft/Harrier-GR9/Models/Lights/GreenLight.xml</path>
		<offsets>
		    <x-m>8.8798</x-m>
		    <y-m>4.6428</y-m>
		    <z-m>0.3045</z-m>
			<roll-deg>-90</roll-deg>
			<pitch-deg>-5</pitch-deg> <!-- due to roll, this tunes heading - I want it to point 5 deg more forward -->
		</offsets>
	</model>
  
	<model>
		<name>RedLight</name>
		<path>Aircraft/Harrier-GR9/Models/Lights/RedLight.xml</path>
		<offsets>
		    <x-m> 8.8798</x-m>
		    <y-m>-4.6428</y-m>
		    <z-m> 0.3045</z-m>
			<roll-deg>90</roll-deg>
			<pitch-deg>-5</pitch-deg> <!-- due to roll, this tunes heading - I want it to point 5 deg more forward -->
		</offsets>
	</model>
  
	<!-- beacon -->
	<!-- bright red flashing light -->
	<!-- note: default orientation is up -->
	<model>
		<name>Beacon1</name>
		<path>Aircraft/Harrier-GR9/Models/Lights/Beacon.xml</path>
		<offsets>
			<x-m> 7.6693</x-m>
			<y-m>-0.1805</y-m>
			<z-m> 1.5655</z-m>
			<pitch-deg>6</pitch-deg>
		</offsets>
	</model>
  
	<model>
		<name>Beacon2</name>
		<path>Aircraft/Harrier-GR9/Models/Lights/Beacon.xml</path>
		<offsets>
			<x-m>9.81</x-m>
			<y-m>0.00</y-m>
			<z-m>0.00</z-m>
			<pitch-deg>174</pitch-deg>
		</offsets>
	</model>

	<!-- landing lights -->
	<!-- a powerful front facing spotlight -->
	<model>
		<name>LandingLight</name>
		<path>Aircraft/Harrier-GR9/Models/Lights/LandingLight.xml</path>
		<offsets>
			<x-m> 4.3511</x-m>
			<y-m> 0.0000</y-m>
			<z-m>-0.5150</z-m>
			<pitch-deg>-5.7</pitch-deg>
		</offsets>
	</model>

	<!-- taxi light -->
	<!-- a weaker front facing spotlight, often mounted on the front gear -->
	<model>
		<name>TaxiLight</name>
		<path>Aircraft/Harrier-GR9/Models/Lights/TaxiLight.xml</path>
		<offsets>
			<x-m> 4.3511</x-m>
			<y-m> 0.0000</y-m>
			<z-m>-0.5150</z-m>
			<pitch-deg>-1.5</pitch-deg>
		</offsets>
	</model>
	<!-- front gear turning: include TaxiLight in the list of animated objects in the rotate animation of the gear in the top-level model XML file -->
	<!-- retracted gear makes it dissapear - use only if mounted on front gear -->
	<animation>
		<type>select</type>
		<object-name>TaxiLight</object-name>
		<condition>
			<equals>
				<property>gear/gear[0]/position-norm</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>
	<!-- probe light --> 
