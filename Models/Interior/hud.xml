<?xml version="1.0"?>

<PropertyList>

<!-- hud Glass -->
  
<animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>

<object-name>hud-glass</object-name>

  </animation>
  <effect>
      <inherits-from>Effects/model-transparent</inherits-from>
    
<object-name>hud-glass</object-name>
   </effect>
   
    <!-- Turns off non rembrant lighting and effects -->
<animation>
        <type>select</type>
        
	<object-name>hud-glass</object-name>

		<condition>
            <not>
            <property>/sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
    </animation>	
 
	<model>
		<path>Aircraft/Harrier-GR9/Models/Interior/hud.ac</path>
		<offsets>
			<x-m> 2.64</x-m>
			<y-m> -0.024</y-m>
			<z-m>1.0239</z-m>
		</offsets>
	</model>

</PropertyList>