<?xml version="1.0"?>
<PropertyList>

 <path>gearLockIndicator.ac</path>
 <!-- Gear Indicator Lights -->
 <animation>
	 <type>select</type>
	 <object-name>LGrIndicator.001</object-name>
	 <object-name>RGrIndicator.001</object-name>
	 <object-name>MGrIndicator.001</object-name>
	 <object-name>FGrIndicator.001</object-name>	 
	 <condition>
		 <equals>
			 <property>gear/gear[2]/position-norm</property>
			 <value>1</value>
		 </equals>
	 </condition>
 </animation>
 <animation>
	 <type>select</type>
	 <object-name>RGrIndicator.001</object-name>
	 <condition>
		 <equals>
			 <property>gear/gear[3]/position-norm</property>
			 <value>1</value>
		 </equals>
	 </condition>
 </animation>
 <animation>
	 <type>select</type>
	 <object-name>MGrIndicator.001</object-name>	 
	 <condition>
		 <equals>
			 <property>gear/gear[1]/position-norm</property>
			 <value>1</value>
		 </equals>
	 </condition>
 </animation>
 <animation>
	 <type>select</type>
	 <object-name>FGrIndicator.001</object-name>	 
	 <condition>
		 <equals>
			 <property>gear/gear[0]/position-norm</property>
			 <value>1</value>
		 </equals>
	 </condition>
	</animation>
</PropertyList>


