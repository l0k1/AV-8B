					</binding>
				</action> 
				<action>
					<name>Radar AirToAir Select</name>
					<button>0</button>
					<x>262</x>
					<y>-107</y>
					<w>20</w>
					<h>20</h>
					<binding>
						<command>property-assign</command>
						<property>instrumentation/radar[0]/selected</property>
