					<x>-145</x>
					<y>00</y>
					<w>30</w>
					<h>20</h>
					<binding>
						<command>property-assign</command>
						<property>instrumentation/enav[0]/selected</property>
						<value>2</value>
					</binding>
				</action>

				<!--+++++++++++++++  Radar +++++++++++++++++++++++-->
