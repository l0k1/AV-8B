				<!--+++++++++Panel Lighting++++++++++-->
				<action>
					<name>PanelLightsDown</name>
					<button>0</button>
					<x>-340</x>
					<y>-20</y>
					<w>20</w>
					<h>25</h>
					<binding>
						<command>property-adjust</command>
						<property>sim/model/material/instruments/factor</property>
						<step>-0.2</step>
						<min>0</min>
						<max>1</max>
						<wrap>false</wrap>
					</binding>
				</action> 
				<action>
					<name>PanelLightsUp</name>
					<button>0</button>
					<x>-320</x>
					<y>-20</y>
					<w>20</w>
					<h>25</h>
					<binding>
						<command>property-adjust</command>
						<property>sim/model/material/instruments/factor</property>
						<step>0.2</step>
						<min>0</min>
						<max>1</max>
						<wrap>false</wrap>
					</binding>
				</action>
				<!--+++++++++Flaps ++++++++++-->
				<action>
					<name>FlapsDown</name>
					<button>0</button>
					<x>-315</x>
					<y>10</y>
					<w>20</w>
					<h>25</h>
					<binding>
						<command>property-adjust</command>
						<property>controls/flight/flaps</property>
