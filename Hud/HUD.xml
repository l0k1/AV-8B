<label>
	<x>10</x>
	<y>-120</y>
	
	<width>60</width>
	<height>10</height>
	<box>true</box>
	<format>PTCH</format>
	<halign>left</halign>
	<condition>
		<equals>
			<property>/autopilot/locks/altitude</property>
			<value>pitch-hold</value>
