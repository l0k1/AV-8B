<!-- waypoint -->

<label>
	<width>2</width>
	<height>2</height>
	<x>20</x>
	<y>-90</y>
	<format>%4.1f :WYPT1</format>
	<halign>left</halign>
	<input>
		<property>/instrumentation/gps/wp/wp[1]/distance-nm</property>
	</input>
</label>

<!-- heading -->

<label>
	<x>10</x>
	<y>-110</y> 
	<width>60</width>
	<height>10</height>
	<box>true</box>
	<format>ROLL</format>
	<halign>left</halign>
	<condition>
		<equals>
			<property>/autopilot/locks/heading</property>
			<value>wing-leveler</value>
		</equals>
	</condition>
</label>

<label>
	<x>10</x>
	<y>-110</y>
	<width>60</width>
	<height>10</height>
	<box>true</box>
	<format>HDG %03d</format>
	<halign>left</halign>
	<input>
		<property>/autopilot/settings/heading-bug-deg</property>
	</input>
	<condition>
		<equals>
			<property>/autopilot/locks/heading</property>
			<value>dg-heading-hold</value>
		</equals>
	</condition>
</label>

<label>
	<x>10</x>
	<y>-110</y>
	<width>60</width>
	<height>10</height>
	<box>true</box>
	<format>HDG %03d</format>
	<halign>left</halign>
	<input>
		<property>/autopilot/settings/true-heading-deg</property>
	</input>
	<condition>
		<equals>
			<property>/autopilot/locks/heading</property>
			<value>true-heading-hold</value>
		</equals>
	</condition>
</label>

